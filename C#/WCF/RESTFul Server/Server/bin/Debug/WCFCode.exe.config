<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>

    <bindings>
      <webHttpBinding>
        <binding name="webhttps">
          <security mode="Transport" />
        </binding>
      </webHttpBinding>
    </bindings>

    <behaviors>

      <endpointBehaviors>
        <behavior name="epBehavior">
          <webHttp />
        </behavior>
      </endpointBehaviors>
      
      <serviceBehaviors>
        <behavior name="BehaverConfig">
          <serviceMetadata httpGetEnabled="true"
                           httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults ="true" />
        </behavior>
      </serviceBehaviors>

    </behaviors>

    <services>

      <service name="WCFCode.XServer" behaviorConfiguration="BehaverConfig">
        <endpoint address=""
                  binding="webHttpBinding"
                  contract="WCFCode.IXServer"
                  name="webhttps"
                  behaviorConfiguration="epBehavior"
                  bindingConfiguration="webhttps">
        </endpoint>

        <endpoint address="mex" binding="mexHttpsBinding" contract="IMetadataExchange" />

        <host>
          <baseAddresses>
            <add baseAddress="https://localhost:9595/WcfService/" />
          </baseAddresses>
        </host>
      </service>

    </services>

  </system.serviceModel>
</configuration>