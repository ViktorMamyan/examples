<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  
    <system.serviceModel>

        <behaviors>
            <serviceBehaviors>
                <behavior name="BehaverConfig">
                    <serviceMetadata httpGetEnabled="true"
                                     httpsGetEnabled="true" />
                    <serviceDebug includeExceptionDetailInFaults="true" />
                </behavior>

            </serviceBehaviors>
        </behaviors>

      <services>
            <service name="Server.WcfService" behaviorConfiguration="BehaverConfig">
              
                <endpoint address="basichttp"
                          binding="basicHttpBinding"
                          name="bhttp"
                          contract="Server.IWcfService" />

                <endpoint address="nettcp"
                          binding="netTcpBinding"
                          name="ntcp"
                          contract="Server.IWcfService" />

              <endpoint address="nethttps"
                        binding="netHttpsBinding"
                        name="https"
                        contract="Server.IWcfService" />
              
                <endpoint address="mex"
                          binding="mexHttpBinding"
                          contract="IMetadataExchange" />

              <endpoint address="mex"
                        binding="mexHttpsBinding"
                        contract="IMetadataExchange" />

                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:9795/WcfService/" />
                        <add baseAddress="net.tcp://localhost:9796/WcfService/" />

                        <add baseAddress="https://localhost:9595/WcfService/" />
                    </baseAddresses>
                </host>

            </service>
        </services>

      <!-- In case of multiple endpoints-->
      <bindings>

        <basicHttpBinding>
          <binding name="bhttp" />
        </basicHttpBinding>

        <netTcpBinding>
          <binding name="ntcp" />
        </netTcpBinding>

        <netHttpsBinding>
          <binding name="https" />
        </netHttpsBinding>
        
      </bindings>
      
    </system.serviceModel>
  
</configuration>